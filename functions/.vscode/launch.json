{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Nodemon",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--inspect"
            ],
            "program": "${workspaceRoot}/bot.js",
            "protocol": "inspector",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}